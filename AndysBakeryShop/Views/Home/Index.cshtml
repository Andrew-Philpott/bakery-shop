@{ Layout = "_Layout"; }

<div
  id="myCarousel"
  class="carousel slide text-center"
  data-ride="carousel"
>
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
    <li data-target="#myCarousel" data-slide-to="3"></li>
  </ol>
  <div class="carousel-inner" role="listbox">
    <div class="carousel-item active">
      <img
        src="~/img/cupcake.jpg"
        class="img-fluid"
        alt="chocolate chip cookie"
      />
    </div>
    <div class="carousel-item">
      <img
        src="~/img/cheesecake.jpg"
        class="img-fluid"
        alt="chocolate chip cookie"
      />
    </div>
    <div class="carousel-item">
      <img
        src="~/img/brownie.jpg"
        class="img-fluid"
        alt="chocolate chip cookie"
      />
    </div>
    <div class="carousel-item">
      <img
        src="~/img/fruitcake.png"
        class="img-fluid"
        alt="chocolate chip cookie"
      />
    </div>
  </div>
</div>
<div class="bg-grey mg-t-24">
  <div class="row">
    <div class="col-sm-6">
      <div class="thumbnail">
        <img
          src="https://images.pexels.com/photos/205961/pexels-photo-205961.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940"
          class="img-fluid"
          alt="Image"
        />
        <h3>
          <a href="/treats"><strong>Treats</strong></a>
        </h3>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="thumbnail">
        <img
          src="https://images.unsplash.com/photo-1571142317846-2aa5347a24e7?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80"
          class="img-fluid"
          alt="Image"
        />
        <h3>
          <a href="/flavors"><strong>Flavors</strong></a>
        </h3>
      </div>
    </div>
  </div>
</div>

