@{ Layout = "_Layout"; }
@model AndysBakery.Models.Flavor;
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

@if ((await AuthorizationService.AuthorizeAsync(User, "Admin")).Succeeded) {
<div class="links"> 
  <a href="/flavors/addtreat/@Model.FlavorId">Add a treat</a>
  <a href="/flavors/edit/@Model.FlavorId">Edit flavor</a>
  <a href="/flavors/delete/@Model.FlavorId">Delete flavor</a>
</div>  
}
