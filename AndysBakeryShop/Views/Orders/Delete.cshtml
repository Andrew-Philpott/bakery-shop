@{ Layout = "_Layout"; }
@using AndysBakery.Models; 
@model AndysBakery.Models.Order;

<div class="links">
  <h4><a href="/orders">Back to orders</a></h4>
</div>
<h1>Are you sure you want to delete this order?</h1>
@foreach (OrderDetailsViewModel item in ViewBag.OrderDetails) {
<h2>@($"{item.Quantity} {item.Description}")</h2>
} 
<form asp-controller="Orders" action="Delete" method="POST">
  <input type="hidden" name="id" value="@Model.OrderId" />
  <input type="submit" value="Delete" class='btn'/>
</form>
