@{ Layout = "_Layout"; }
@using System.Collections.Generic;
@using AndysBakery.ViewModels;
@model List<AndysBakery.ViewModels.FlavorTreatViewModel>;

<h1>Create Order</h1>
@if(ViewBag.Count != 0) { 
<form asp-controller="Orders" asp-action="Create" method="POST" >
  <div class="form-group">
    <select class="form-control" name="FlavorTreatId" required>
      @foreach (FlavorTreatViewModel item in Model) {
      <option value="@item.FlavorTreatId">@item.Description</option>
      }
    </select>
  </div>
  <div class="form-group">
    <label for="quantity">Quantity</label>
    <input class="form-control" type="number" name="quantity" required/>
  </div>
  <input type="submit" value="Place Order" class="btn btn-default" />
</form>
} else {
<h2>There are no treats to create an order with</h2>
}
<div class="links">
  <a href="/orders">Back to all orders</a>
</div>
